<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_city_details_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.bunty.touristinfo.CityDetailsPage">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_description"
        android:layout_below="@+id/iv_image"
        android:scrollbars="vertical"
        android:layout_above="@+id/bt_famousPlaces" />

    <Button
        android:text="Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_gallery"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_description"
        android:paddingBottom="5dp"/>

    <Button
        android:text="Famous Places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_famousPlaces"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bt_gallery"
        android:layout_marginStart="80dp" />


</RelativeLayout>
