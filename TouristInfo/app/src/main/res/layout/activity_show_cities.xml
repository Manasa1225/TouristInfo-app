<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_cities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bunty.touristinfo.ShowCities">


    <GridView
        android:id="@+id/gl_cityname"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:numColumns="auto_fit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></GridView>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Place"
            android:padding="5dp"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:id="@+id/bt_addCityName"
        android:layout_below="@+id/gl_cityname" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_addCityName"
        android:padding="5dp"
        android:layout_below="@id/gl_cityname"
        android:layout_toEndOf="@+id/bt_addCityName"
        android:hint="Add City Name"/>

</RelativeLayout>
