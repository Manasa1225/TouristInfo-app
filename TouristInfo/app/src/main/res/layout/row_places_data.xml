<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardUseCompatPadding="true"  >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/iv_placeImage"
            android:padding="5dp"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:id="@+id/tv_placeTitle"
            android:layout_below="@+id/iv_placeImage"
            android:layout_alignParentStart="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12dp"
            android:padding="8dp"
            android:id="@+id/tv_placeDescription"
            android:layout_below="@+id/tv_placeTitle"
            android:layout_alignParentStart="true"
            android:scrollbars="vertical"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
